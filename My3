# Бесконечный цикл с паузой (запуск в фоне)
while ($true) {
    try {
        # Get-ChildItem заставляет систему обратиться к файловой системе.
        # -Name: возвращает только имена (меньше трафика).
        # -First 1: берет только первый файл и сразу разрывает перечисление (очень быстро).
        # ErrorAction SilentlyContinue: чтобы не спамить ошибками, если сеть моргнула.
        Get-ChildItem -Path "Z:\" -Name -First 1 -ErrorAction SilentlyContinue | Out-Null
    }
    catch {
        # Логирование ошибки, если нужно, или просто пропуск
    }
    
    # Пауза 60 секунд (или меньше, если отвалы происходят чаще)
    Start-Sleep -Seconds 60
}
