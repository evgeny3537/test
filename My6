while ($true) {
    try {
        # Get-Acl не читает файлы, он читает метаданные безопасности.
        # Это заставляет OS обновить токен безопасности на соединении.
        # ErrorAction Stop нужен, чтобы поймать ошибку, если диск спит.
        Get-Acl -Path "Z:\" -ErrorAction Stop | Out-Null
    }
    catch {
        # Если прямой запрос ACL не прошел, попробуем "пробить" через .NET класс напрямую.
        # Иногда PowerShell командлет слишком "умный" и верит кэшу, а .NET — нет.
        try {
            $DirInfo = New-Object System.IO.DirectoryInfo("Z:\")
            # Этот метод жестко требует ответа от сервера
            $null = $DirInfo.GetAccessControl()
        } catch {
            # Если и тут ошибка — ничего страшного, попытка обращения уже ушла в сеть
        }
    }

    Start-Sleep -Seconds 60
}
